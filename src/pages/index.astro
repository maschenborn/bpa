---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Container, Typography, Box, Card, CardContent, Button, CardActionArea } from '@mui/material';
import Grid from '@mui/material/Grid';
import MedicalServicesIcon from '@mui/icons-material/MedicalServices';
import CalendarMonthIcon from '@mui/icons-material/CalendarMonth';
import MedicationIcon from '@mui/icons-material/Medication';
import MonitorHeartIcon from '@mui/icons-material/MonitorHeart';
import DescriptionIcon from '@mui/icons-material/Description';
import TimelineIcon from '@mui/icons-material/Timeline';
import ArrowForwardIcon from '@mui/icons-material/ArrowForward';
---

<BaseLayout title="Dashboard">
  <Container sx={{ width: '100%', py: { xs: 2, sm: 3 }, px: { xs: 2, sm: 3 } }}>
    {/* Compact Header */}
    <Box sx={{ mb: { xs: 2, sm: 3 }, textAlign: 'center' }}>
      <Typography
        variant="h5"
        component="h1"
        sx={{
          fontWeight: 700,
          fontSize: { xs: '1.25rem', sm: '1.5rem' },
          color: 'text.primary'
        }}
      >
        Bines Patientenakte
      </Typography>
    </Box>

    {/* Hero: Timeline Card */}
    <Card
      sx={{
        mb: { xs: 2, sm: 3 },
        background: 'linear-gradient(135deg, #fa5f46 0%, #ff8a75 100%)',
        color: 'white',
        borderRadius: 3,
        overflow: 'hidden',
        boxShadow: '0 8px 32px rgba(250, 95, 70, 0.3)',
      }}
    >
      <CardActionArea href="/timeline" sx={{ p: { xs: 2.5, sm: 3 } }}>
        <Box sx={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between' }}>
          <Box sx={{ display: 'flex', alignItems: 'center', gap: 2 }}>
            <TimelineIcon sx={{ fontSize: { xs: 32, sm: 40 } }} />
            <Box>
              <Typography
                variant="h5"
                sx={{
                  fontWeight: 700,
                  fontSize: { xs: '1.25rem', sm: '1.5rem' },
                  mb: 0.5
                }}
              >
                Timeline
              </Typography>
              <Typography
                variant="body2"
                sx={{ opacity: 0.9, fontSize: { xs: '0.8rem', sm: '0.875rem' } }}
              >
                Chronologische Übersicht aller Einträge
              </Typography>
            </Box>
          </Box>
          <ArrowForwardIcon sx={{ fontSize: 28, opacity: 0.8 }} />
        </Box>
      </CardActionArea>
    </Card>

    {/* Compact Grid: Other Sections */}
    <Grid container spacing={{ xs: 1.5, sm: 2 }}>
      <Grid size={{ xs: 6, sm: 4 }}>
        <Card sx={{ height: '100%', borderRadius: 2 }}>
          <CardActionArea href="/doctors" sx={{ p: { xs: 1.5, sm: 2 }, height: '100%' }}>
            <Box sx={{ display: 'flex', flexDirection: 'column', alignItems: 'center', textAlign: 'center' }}>
              <MedicalServicesIcon sx={{ fontSize: { xs: 28, sm: 32 }, color: 'primary.main', mb: 1 }} />
              <Typography variant="subtitle2" sx={{ fontWeight: 600, fontSize: { xs: '0.8rem', sm: '0.875rem' } }}>
                Ärzte
              </Typography>
            </Box>
          </CardActionArea>
        </Card>
      </Grid>

      <Grid size={{ xs: 6, sm: 4 }}>
        <Card sx={{ height: '100%', borderRadius: 2 }}>
          <CardActionArea href="/appointments" sx={{ p: { xs: 1.5, sm: 2 }, height: '100%' }}>
            <Box sx={{ display: 'flex', flexDirection: 'column', alignItems: 'center', textAlign: 'center' }}>
              <CalendarMonthIcon sx={{ fontSize: { xs: 28, sm: 32 }, color: 'primary.main', mb: 1 }} />
              <Typography variant="subtitle2" sx={{ fontWeight: 600, fontSize: { xs: '0.8rem', sm: '0.875rem' } }}>
                Termine
              </Typography>
            </Box>
          </CardActionArea>
        </Card>
      </Grid>

      <Grid size={{ xs: 6, sm: 4 }}>
        <Card sx={{ height: '100%', borderRadius: 2 }}>
          <CardActionArea href="/medications" sx={{ p: { xs: 1.5, sm: 2 }, height: '100%' }}>
            <Box sx={{ display: 'flex', flexDirection: 'column', alignItems: 'center', textAlign: 'center' }}>
              <MedicationIcon sx={{ fontSize: { xs: 28, sm: 32 }, color: 'primary.main', mb: 1 }} />
              <Typography variant="subtitle2" sx={{ fontWeight: 600, fontSize: { xs: '0.8rem', sm: '0.875rem' } }}>
                Medikamente
              </Typography>
            </Box>
          </CardActionArea>
        </Card>
      </Grid>

      <Grid size={{ xs: 6, sm: 4 }}>
        <Card sx={{ height: '100%', borderRadius: 2 }}>
          <CardActionArea href="/status" sx={{ p: { xs: 1.5, sm: 2 }, height: '100%' }}>
            <Box sx={{ display: 'flex', flexDirection: 'column', alignItems: 'center', textAlign: 'center' }}>
              <MonitorHeartIcon sx={{ fontSize: { xs: 28, sm: 32 }, color: 'primary.main', mb: 1 }} />
              <Typography variant="subtitle2" sx={{ fontWeight: 600, fontSize: { xs: '0.8rem', sm: '0.875rem' } }}>
                Tagesstatus
              </Typography>
            </Box>
          </CardActionArea>
        </Card>
      </Grid>

      <Grid size={{ xs: 6, sm: 4 }}>
        <Card sx={{ height: '100%', borderRadius: 2 }}>
          <CardActionArea href="/documents" sx={{ p: { xs: 1.5, sm: 2 }, height: '100%' }}>
            <Box sx={{ display: 'flex', flexDirection: 'column', alignItems: 'center', textAlign: 'center' }}>
              <DescriptionIcon sx={{ fontSize: { xs: 28, sm: 32 }, color: 'primary.main', mb: 1 }} />
              <Typography variant="subtitle2" sx={{ fontWeight: 600, fontSize: { xs: '0.8rem', sm: '0.875rem' } }}>
                Dokumente
              </Typography>
            </Box>
          </CardActionArea>
        </Card>
      </Grid>
    </Grid>
  </Container>
</BaseLayout>
