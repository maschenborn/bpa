---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Container, Typography, Box, Card, CardContent, Button } from '@mui/material';
import Grid from '@mui/material/Grid';
import MedicalServicesIcon from '@mui/icons-material/MedicalServices';
import CalendarMonthIcon from '@mui/icons-material/CalendarMonth';
import MedicationIcon from '@mui/icons-material/Medication';
import MonitorHeartIcon from '@mui/icons-material/MonitorHeart';
import DescriptionIcon from '@mui/icons-material/Description';
---

<BaseLayout title="Dashboard">
  <Container sx={{ width: '100%', py: 4 }}>
    <Box sx={{ mb: 4 }}>
      <Typography variant="h1" component="h1" gutterBottom>
        BPA - Bines Patientenakte
      </Typography>
      <Typography variant="body1" color="text.secondary">
        Dokumentation und Übersicht der Behandlungshistorie
      </Typography>
    </Box>

    <Grid container spacing={3}>
      <Grid size={{ xs: 12, sm: 6, md: 4 }}>
        <Card sx={{ height: '100%' }}>
          <CardContent>
            <Box sx={{ display: 'flex', alignItems: 'center', mb: 2 }}>
              <MedicalServicesIcon sx={{ mr: 1, color: 'primary.main' }} />
              <Typography variant="h3">Ärzte</Typography>
            </Box>
            <Typography variant="body2" color="text.secondary" sx={{ mb: 2 }}>
              Behandelnde Ärzte und Kliniken verwalten
            </Typography>
            <Button variant="outlined" href="/doctors" fullWidth>
              Ärzte verwalten
            </Button>
          </CardContent>
        </Card>
      </Grid>

      <Grid size={{ xs: 12, sm: 6, md: 4 }}>
        <Card sx={{ height: '100%' }}>
          <CardContent>
            <Box sx={{ display: 'flex', alignItems: 'center', mb: 2 }}>
              <CalendarMonthIcon sx={{ mr: 1, color: 'primary.main' }} />
              <Typography variant="h3">Termine</Typography>
            </Box>
            <Typography variant="body2" color="text.secondary" sx={{ mb: 2 }}>
              Arzttermine mit Befunden protokollieren
            </Typography>
            <Button variant="outlined" href="/appointments" fullWidth>
              Termine verwalten
            </Button>
          </CardContent>
        </Card>
      </Grid>

      <Grid size={{ xs: 12, sm: 6, md: 4 }}>
        <Card sx={{ height: '100%' }}>
          <CardContent>
            <Box sx={{ display: 'flex', alignItems: 'center', mb: 2 }}>
              <MedicationIcon sx={{ mr: 1, color: 'primary.main' }} />
              <Typography variant="h3">Medikamente</Typography>
            </Box>
            <Typography variant="body2" color="text.secondary" sx={{ mb: 2 }}>
              Medikation und Wirkungen dokumentieren
            </Typography>
            <Button variant="outlined" href="/medications" fullWidth>
              Medikamente verwalten
            </Button>
          </CardContent>
        </Card>
      </Grid>

      <Grid size={{ xs: 12, sm: 6, md: 4 }}>
        <Card sx={{ height: '100%' }}>
          <CardContent>
            <Box sx={{ display: 'flex', alignItems: 'center', mb: 2 }}>
              <MonitorHeartIcon sx={{ mr: 1, color: 'primary.main' }} />
              <Typography variant="h3">Tagesstatus</Typography>
            </Box>
            <Typography variant="body2" color="text.secondary" sx={{ mb: 2 }}>
              Täglichen Zustand und Symptome erfassen
            </Typography>
            <Button variant="outlined" href="/status" fullWidth>
              Status erfassen
            </Button>
          </CardContent>
        </Card>
      </Grid>

      <Grid size={{ xs: 12, sm: 6, md: 4 }}>
        <Card sx={{ height: '100%' }}>
          <CardContent>
            <Box sx={{ display: 'flex', alignItems: 'center', mb: 2 }}>
              <DescriptionIcon sx={{ mr: 1, color: 'primary.main' }} />
              <Typography variant="h3">Dokumente</Typography>
            </Box>
            <Typography variant="body2" color="text.secondary" sx={{ mb: 2 }}>
              Befunde, Röntgenbilder und Rechnungen
            </Typography>
            <Button variant="outlined" href="/documents" fullWidth>
              Dokumente verwalten
            </Button>
          </CardContent>
        </Card>
      </Grid>

      <Grid size={{ xs: 12, sm: 6, md: 4 }}>
        <Card sx={{ height: '100%', bgcolor: 'primary.main', color: 'white' }}>
          <CardContent>
            <Box sx={{ display: 'flex', alignItems: 'center', mb: 2 }}>
              <Typography variant="h3" sx={{ color: 'white' }}>Timeline</Typography>
            </Box>
            <Typography variant="body2" sx={{ mb: 2, color: 'rgba(255,255,255,0.9)' }}>
              Chronologische Übersicht aller Einträge
            </Typography>
            <Button variant="contained" href="/timeline" fullWidth sx={{ bgcolor: 'white', color: 'primary.main', '&:hover': { bgcolor: 'grey.100' } }}>
              Zur Timeline
            </Button>
          </CardContent>
        </Card>
      </Grid>
    </Grid>
  </Container>
</BaseLayout>
