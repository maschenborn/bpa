---
import ThemeProvider from '../components/layout/ThemeProvider';
import AppShell from '../components/layout/AppShell';
import VoiceAssistant from '../components/Assistant/VoiceAssistant';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="BPA - Bines Patientenakte" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | BPA</title>

    <!-- PWA -->
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="theme-color" content="#fa5f46" />

    <!-- iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="BPA" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />

    <!-- Android -->
    <meta name="mobile-web-app-capable" content="yes" />
  </head>
  <body>
    <ThemeProvider client:load>
      <AppShell title={title} client:load>
        <slot />
      </AppShell>
      <VoiceAssistant client:only="react" />
    </ThemeProvider>

    <!-- Service Worker Registration -->
    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js');
      }
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    min-height: 100vh;
  }

  body {
    background-color: #f5f5f5;
  }

  @media print {
    body {
      background-color: white;
    }
  }
</style>
